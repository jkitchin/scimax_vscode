{
  "scopeName": "scimax.latex.citations",
  "injectionSelector": "L:text.tex.latex",
  "patterns": [
    {
      "comment": "Extended citation commands (natbib, biblatex) - command name",
      "match": "(\\\\)(citenum|citealp|citealt|citeyearpar|citetext|textcite|parencite|footcite|autocite|fullcite|smartcite|supercite|Textcite|Parencite|Footcite|Autocite|Smartcite|Supercite|Citeauthor|Citeyear|Citetitle)(?=\\s*[\\[\\{])",
      "captures": {
        "1": { "name": "punctuation.definition.function.latex" },
        "2": { "name": "support.function.citation.latex" }
      }
    },
    {
      "comment": "Citation command with braces - highlight keys",
      "begin": "(\\\\)(citenum|citealp|citealt|citeyearpar|citetext|textcite|parencite|footcite|autocite|fullcite|smartcite|supercite|Textcite|Parencite|Footcite|Autocite|Smartcite|Supercite|Citeauthor|Citeyear|Citetitle)(\\{)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.function.latex" },
        "2": { "name": "support.function.citation.latex" },
        "3": { "name": "punctuation.definition.arguments.begin.latex" }
      },
      "end": "(\\})",
      "endCaptures": {
        "1": { "name": "punctuation.definition.arguments.end.latex" }
      },
      "contentName": "meta.citation.latex",
      "patterns": [
        {
          "comment": "Citation key",
          "match": "[^,\\}]+",
          "name": "constant.other.citation.latex"
        },
        {
          "match": ",",
          "name": "punctuation.separator.citation.latex"
        }
      ]
    },
    {
      "comment": "Citation command with optional args then braces",
      "begin": "(\\\\)(citenum|citealp|citealt|citeyearpar|citetext|textcite|parencite|footcite|autocite|fullcite|smartcite|supercite|Textcite|Parencite|Footcite|Autocite|Smartcite|Supercite|Citeauthor|Citeyear|Citetitle)(\\[)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.function.latex" },
        "2": { "name": "support.function.citation.latex" },
        "3": { "name": "punctuation.definition.arguments.optional.begin.latex" }
      },
      "end": "(\\])",
      "endCaptures": {
        "1": { "name": "punctuation.definition.arguments.optional.end.latex" }
      },
      "contentName": "meta.citation.optional.latex"
    }
  ]
}
